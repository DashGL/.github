---
export interface Props {
    url: string;
}

const { url } = Astro.props;
---

<a
    type="button"
    href={url}
    target="_blank"
    class="text-white block mx-auto w-1/2 bg-gradient-to-r from-green-400 via-green-500 to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 shadow-lg shadow-green-500/50 dark:shadow-lg dark:shadow-green-800/80 font-medium rounded-lg text-5x1 px-6 py-3.5 text-center mb-4"
    >Click here to Download</a
>
