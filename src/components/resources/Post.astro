---
import Header from "./Header.astro";
import Source from "./Source.astro";

export interface Props {
    title: string;
    description: string;
    date?: Date;
    image?: string;
    source: string | null;
    url: string;
}

const {
    title,
    description,
    date = new Date(),
    image = "https://placehold.co/600x400",
    source = null,
    url,
} = Astro.props;
---

<div
    class="bg-white border-b border-gray-200 dark:bg-gray-800 dark:border-gray-700 pt-4 px-2.5"
>
    <Header date={date} />
    <div
        class="gap-x-4 -mt-4 -mb-10 items-center max-w-screen-xl md:grid md:grid-cols-2"
    >
        <img class="rounded-lg" src={image} alt="" />

        <div class="md:mt-0">
            <h3
                class="text-lg font-bold leading-tight text-gray-900 dark:text-white"
            >
                {title}
            </h3>
            <p class="text-base font-normal text-gray-500 dark:text-gray-400">
                {description}
            </p>

            {source && <Source url={source} />}
        </div>
    </div>

    <footer class="flex justify-between items-center">
        <div class="flex items-center">
            <img
                class="w-7 h-7 rounded-full"
                src="/profile.jpg"
                alt="Kion DashGL avatar"
            />
            <span class="ps-2 font-medium dark:text-white">Kion</span>
        </div>
        <a
            href={url}
            class="inline-flex items-center font-medium text-primary-600 dark:text-primary-500 hover:underline"
        >
            Read More
            <svg
                class="ml-2 w-4 h-4"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                    fill-rule="evenodd"
                    d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                    clip-rule="evenodd"></path></svg
            >
        </a>
    </footer>
</div>
