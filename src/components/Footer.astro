---
const today = new Date();

import GithubRound from "./svg/GithubRound.astro"
import Gitlab from "./svg/Gitlab.astro"
import Youtube from "./svg/Youtube.astro"
import Twitter from "./svg/Twitter.astro"
import Mastodon from "./svg/Mastodon.astro"
---

<footer class="p-4 bg-white sm:p-6 dark:bg-gray-800">
	<div class="mx-auto max-w-screen-xl">
		<div class="md:flex md:justify-between">
			<div class="mb-6 md:mb-0">
				<a href="https://flowbite.com" class="flex items-center">
					<img
						src="/logo.png"
						class="mr-3 h-8"
						alt="FlowBite Logo"
					/>
					<span
						class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"
						>DashGL</span
					>
				</a>
			</div>
			<div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
				<div>
					<h2
						class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
					>
						Resources
					</h2>
					<ul class="text-gray-600 dark:text-gray-400">
						<li class="mb-4">
							<a
								href="/info/libraries"
								class="hover:underline">Libraries</a
							>
						</li>
						<li>
							<a
								href="/info/opengl"
								class="hover:underline">OpenGL</a
							>
						</li>
					</ul>
				</div>
				<div>
					<h2
						class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
					>
						About
					</h2>
					<ul class="text-gray-600 dark:text-gray-400">
						<li class="mb-4">
							<a
								href="/info/about"
								class="hover:underline">About Us</a
							>
						</li>
						<li>
							<a
								href="/info/contribute"
								class="hover:underline">Contribute</a
							>
						</li>
					</ul>
				</div>
				<div>
					<h2
						class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
					>
						Legal
					</h2>
					<ul class="text-gray-600 dark:text-gray-400">
						<li class="mb-4">
							<a href="/info/privacy" class="hover:underline"
								>Privacy Policy</a
							>
						</li>
						<li>
							<a href="/info/copyright" class="hover:underline"
								>Copyright</a
							>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<hr
			class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8"
		/>
		<div class="sm:flex sm:items-center sm:justify-between">
			<span
				class="text-sm text-gray-500 sm:text-center dark:text-gray-400"
			>
				Copyright &copy; 2016 - {today.getFullYear()} DashGL Project
			</span>
			<div class="flex mt-4 space-x-6 sm:justify-center sm:mt-0">
				<a
					href="https://www.youtube.com/@kion_dgl"
					class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
				>
					<Youtube/>
				</a>
				<a
					href="https://gitlab.com/dashgl/"
					class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
				>
					<Gitlab/>
				</a>
				<a
					href="https://twitter.com/kion_dgl"
					class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
				>
					<Twitter/>
				</a>
				<a
					href="https://github.com/DashGL/"
					class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
				>
					<GithubRound/>
				</a>
				<a
					href="https://linuxrocks.online/@kion"
					class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
				>
					<Mastodon/>
				</a>
			</div>
		</div>
	</div>
</footer>
