---
import BaseHead from "../components/BaseHead.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

import Banner from "../components/elements/Banner.astro";
import TutorialCard from "../components/elements/TutorialCard.astro";

---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title="Tools" description="Spotlight on Tools" />
    </head>

    <body>
        <Navbar />
        <main>
 
            <Banner
                title="Tools"
                description="Tools are a spotlight on tools for reverse engineering and fan projects of retro games."
                color="rgb(212, 247, 255)"
            />

            <section class="my-5">
                <div class="container">
                    <!--Grid row-->
                    <div class="row">
                        <!--Grid column-->
                        <div class="col-md-9 mb-4">
                            <!--Section: Content-->
                            <section>
                                <TutorialCard
                                    title="Megaman Legends 1"
                                    description="Save State Viewer for Megaman Legends 1"
                                    image="/img/tutorial-1.jpg"
                                />
                                <TutorialCard
                                    title="Megaman Legends 2"
                                    description="Save STate Viewer for Megaman Legends 2"
                                    image="/img/tutorial-2.jpg"
                                />
                                <TutorialCard
                                    title="Phantasy Star Online"
                                    description="File Viewer and exporter for PSOv2"
                                    image="/img/tutorial-3.jpg"
                                />
                            </section>
                            <!--Section: Content-->
                        </div>
                        <!--Grid column-->

                        <!--Grid column-->
                        <div class="col-md-3 mb-4">
                            <!--Section: Sidebar-->
                            <section>
                                <!--Section: Ad-->
                                <section>
                                    <h5>Graphics Tutorials for Linux</h5>

                                    <ul>
                                        <li>OpenGL 2.0ES</li>
                                        <li>OpenGL 3.0</li>
                                    </ul>
                                    <ul>
                                        <li>SDL</li>
                                        <li>EGL</li>
                                        <li>GTK</li>
                                    </ul>
                                </section>
                                <!--Section: Ad-->
                            </section>
                            <!--Section: Sidebar-->
                        </div>
                        <!--Grid column-->
                    </div>
                    <!--Grid row-->

                    <!-- Pagination -->
                    <nav class="my-4" aria-label="...">
                        <ul
                            class="pagination pagination-circle justify-content-center"
                        >
                            <li class="page-item">
                                <a
                                    class="page-link"
                                    href="#"
                                    tabindex="-1"
                                    aria-disabled="true">Previous</a
                                >
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item active" aria-current="page">
                                <a class="page-link" href="#"
                                    >2 <span class="sr-only">(current)</span></a
                                >
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </section>

            <Footer />
        </main>
    </body>
</html>
