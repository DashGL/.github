---
import BaseHead from "../components/BaseHead.astro";
import Navbar from "../components/Navbar.astro";
import Banner from "../components/elements/Banner.astro";
import Footer from "../components/Footer.astro";

export interface Props {
    title: string;
    description: string;
    image: string;
}

---

<html lang="en">
    <head>
        <BaseHead
            title="DashGL 404 Page"
            description="A somewhat lewd 404 page, maybe i should have some shame"
            image="/banner/dashie-transparent-min.png"
        />
    </head>

    <body class="bg-white dark:bg-gray-900">
        <Navbar />
        <main class="pb-16 lg:pb-24">
            <section class="bg-white dark:bg-gray-900">
                <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
                    <div class="mx-auto max-w-screen-sm text-center">
                        <img
                            class="mx-auto mb-4"
                            src="/banner/dashie-transparent-min.png"
                            alt="404 Not Found"
                        />
                        <h1
                            class="mb-4 text-4xl font-extrabold text-blue-200 dark:text-blue-500"
                        >
                            404 Not Found
                        </h1>
                        <p
                            class="mb-10 text-3xl tracking-tight font-bold text-gray-900 md:text-4xl dark:text-white"
                        >
                            Well this is a little embarrassing
                        </p>
                        <p class="mb-4 text-gray-500 dark:text-gray-400">
                            Not sure what you were looking for but you found
                            this. So that's something right? You're free to
                            stick around if you like what you see.
                        </p>
                        <ul
                            class="flex justify-center items-center space-x-4 text-gray-500 dark:text-gray-400"
                        >
                            <li>
                                <a
                                    href="/"
                                    class="underline hover:text-gray-900 dark:hover:text-white"
                                    >Home</a
                                >
                            </li>
                            <li>
                                <a
                                    href="/tutorials"
                                    class="underline hover:text-gray-900 dark:hover:text-white"
                                    >Tutorials</a
                                >
                            </li>
                            <li>
                                <a
                                    href="/blog/1"
                                    class="underline hover:text-gray-900 dark:hover:text-white"
                                    >Blog</a
                                >
                            </li>
                            <li>
                                <a
                                    href="/resources"
                                    class="underline hover:text-gray-900 dark:hover:text-white"
                                    >Resources</a
                                >
                            </li>
                            <li>
                                <a
                                    href="/formats"
                                    class="underline hover:text-gray-900 dark:hover:text-white"
                                    >Formats</a
                                >
                            </li>
                        </ul>
                    </div>
                </div>
            </section>

            <div class="py-12"></div>
        </main>
        <Footer />
    </body>
</html>
